{% extends "view/base.html" %}

{% block header %}
<div class="page-title">Welcome, {{nickname}}.</div>
{% endblock %}

{% block content %}

<h3>Donut Selection</h3>

<form class="form-horizontal" action="addjob" method="post">

<!-- Select Basic -->
<div class="form-group">
  <label class="col-md-4 control-label" for="selectbasic">Type</label>
  <div class="col-md-4">
    <select id="flavor" name="flavor" class="form-control">
      <option value="chocolate">Chocolate</option>
      <option value="glazed">Glazed</option>
      <option value="jelly">Jelly</option>
    </select>
  </div>
</div>

<!-- Select Basic -->
<div class="form-group">
  <label class="col-md-4 control-label" for="destination">Delivery Location</label>
  <div class="col-md-4">
    <select id="destination" name="destination" class="form-control">
      <option value="maingreen">Main Green</option>
      <option value="quietgreen">Quiet Green</option>
      <option value="ruthsimmons">Ruth Simmons</option>
    </select>
  </div>
</div>

<!-- Button -->
<div class="form-group">
  <label class="col-md-4 control-label" for="addjob"></label>
  <div class="col-md-4">
    <button class="btn btn-primary">Fly2me</button>
  </div>
</div>

</form>


{% endblock %}